{
  "name": "geeze-bingo-backend",
  "version": "1.0.0",
  "description": "Production-ready Telegram Bingo Game Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "docker:build": "docker build -t geeze-bingo .",
    "docker:up": "docker-compose up -d",
