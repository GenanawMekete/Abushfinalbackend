    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 delete geeze-bingo"
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
