# ========================================
# GEEZ BINGO - PRODUCTION CONFIGURATION
# ========================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
ADMIN_URL=https://admin.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://bot.yourdomain.com

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
BOT_WEBHOOK_URL=https://api.yourdomain.com/webhook
TELEGRAM_API=https://api.telegram.org
WEBAPP_URL=https://yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/geeze_bingo
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/geeze_bingo
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Game Configuration
GAME_MIN_PLAYERS=1
GAME_MAX_PLAYERS=400
GAME_BET_AMOUNT=10
GAME_ROUND_DURATION=30
GAME_COUNTDOWN=10
GAME_PRIZE_PERCENTAGE=85
GAME_HOUSE_FEE=15
GAME_MAX_CARDS=400


# Payment Configuration
TELEBIRR_API_KEY=your_telebirr_api_key
TELEBIRR_MERCHANT_ID=your_merchant_id
TELEBIRR_SECRET_KEY=your_secret_key
MIN_DEPOSIT=10
MAX_DEPOSIT=50000
MIN_WITHDRAWAL=50
MAX_WITHDRAWAL=10000
WITHDRAWAL_FEE=0
NUMBER_CALL_INTERVAL=5          # 4 seconds between number calls
WINNER_ANNOUNCEMENT_DURATION=5  # 5 seconds to announce winner
CARD_SELECTION_DURATION=30      # 30 seconds for card selection
GAME_START_COUNTDOWN=5          # 5 seconds before game starts
GAME_MAX_DURATION=300           # 300 seconds (5 min) max if no winner

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRY=24h
ADMIN_PASSWORD=your_secure_admin_password
ENCRYPTION_KEY=32_byte_encryption_key_here
SESSION_SECRET=your_session_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ADMIN_EMAIL=admin@yourdomain.com

# API Keys
GOOGLE_RECAPTCHA_KEY=your_recaptcha_site_key
GOOGLE_RECAPTCHA_SECRET=your_recaptcha_secret
